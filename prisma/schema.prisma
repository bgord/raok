generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model Event {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String
  stream    String
  version   Int
  payload   String
}

model Newspaper {
  id          String    @id @default(uuid())
  status      String
  scheduledAt Int
  sentAt      Int?
  articles    Article[]
}

model Article {
  id          String     @id @default(uuid())
  url         String
  source      String
  status      String
  createdAt   Int
  title       String?
  description String?
  image       String?
  newspaperId String?
  favourite   Boolean    @default(false)
  Newspaper   Newspaper? @relation(fields: [newspaperId], references: [id])
}

model StatsKeyValue {
  id    String  @id @default(uuid())
  key   String? @unique(map: "sqlite_autoindex_StatsKeyValue_2")
  value Int
}
