generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model Event {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String
  stream    String
  version   Int
  payload   String
}

model Newspaper {
  id          String    @id @default(uuid())
  status      String
  scheduledAt Int
  articles    Article[]
  sentAt      Int?
}

model Article {
  id          String     @id @default(uuid())
  url         String
  source      String
  status      String
  createdAt   Int
  title       String?
  description String?
  image       String?
  Newspaper   Newspaper? @relation(fields: [newspaperId], references: [id])
  newspaperId String?
}

model Stats {
  id                String     @id @default(uuid())
  createdArticles   Int        @default(0)
  sentNewspapers    Int        @default(0)
}
